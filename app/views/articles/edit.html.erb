<h1>Edit Article</h1>

<%= turbo_frame_tag dom_id(@article) do %>
  <%= form_with(model: @article) do |form| %>
    <% if @article.errors.any? %>
      <div id="error_explanation" class="text-danger" >
        <p><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title, "Title", class: "form-label" %>
      <%= form.text_field :title, class: "form-control", id: "title_id", aria: { describedby: "emailHelp" } %>
    </div>

    <div class="form-group">
      <%= form.label :description, "Description", class: "form-label" %>
      <%= form.text_field :description, class: "form-control", id: "description_id", aria: { describedby: "emailHelp" } %>
    </div>

    <div class="form-group">
      <%= form.label :document, "Document", class: "form-label" %>
      <%= form.file_field :document, class: "form-control", id: "description_id", aria: { describedby: "emailHelp" } %>
    </div>


    <div class="form-group">
      <%= form.label :price, "Price", class: "form-label" %>
      <%= form.text_field :price, class: "form-control", id: "price_id" %>
    </div>

    <button type="submit" class="btn btn-primary mt-2 float-end">Update Article</button>
    <br>
    <br>
  <% end %>
<% end %>
